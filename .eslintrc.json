{
  "root": true,
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:@next/next/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/function-component-definition": "off",
    "react/jsx-props-no-spreading": "off",
    "func-names": "off",
    "jsx-a11y/label-has-associated-control": "off"
  }
}
